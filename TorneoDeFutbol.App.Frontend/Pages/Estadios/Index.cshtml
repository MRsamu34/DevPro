@page
@model TorneoDeFutbol.App.Frontend.Pages.Estadios.IndexModel
@{
}
<div class="card mb-4 shadow bg-body rounded">
    <div class="card-body text-primary fs-1 ">Listado De Estadios</div>
</div>
<div class="card-body">
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Dirección</th>
            <th scope="col">Municipio</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
                <td>@estadio.Municipio</td>
            </tr>
            <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@estadio.Id">Detalle</a>
            </td>
        }
    </tbody>
</table>
</div>