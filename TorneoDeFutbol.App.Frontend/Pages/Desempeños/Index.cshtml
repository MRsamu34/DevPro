@page
@model TorneoDeFutbol.App.Frontend.Pages.Desempeños.IndexModel
@{
}
<h1>Desempeños de los Equipos - DevPro</h1>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Equipo</th>
            <th scope="col">Numero de Partidos</th>
            <th scope="col">Partidos Ganados</th>
            <th scope="col">Partidos Empatados</th>
            <th scope="col">Goles a Favor</th>
            <th scope="col">Goles en Contra</th>
            <th scope="col">Puntos</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var desempeño in Model.desempeños)
        {
            <tr>
                <td>@desempeño.NumeroPartidos</td>
                <td>@desempeño.PartidosGanados</td>
                <td>@desempeño.PartidosEmpatados</td>
                <td>@desempeño.GolesAfavor</td>
                <td>@desempeño.GolesEncontra</td>
                <td>@desempeño.Puntos</td>
                <td>@desempeño.Puntos</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@desempeño.Id">Detalle</a>
                </td>
            </tr>

        }
    </tbody>
</table>