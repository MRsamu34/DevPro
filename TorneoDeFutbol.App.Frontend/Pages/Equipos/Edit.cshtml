@page
@using TorneoDeFutbol.App.Dominio
@model TorneoDeFutbol.App.Frontend.Pages.Equipos.EditModel
@{
}
<h1>Editar equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id"></label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control">
        <span asp-validation-for="equipo.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="equipo.DirectorTecnico_id"></label>
        <input asp-for="equipo.DirectorTecnico_id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="equipo.Municipio_id"></label>
        <input asp-for="equipo.Municipio_id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="equipo.Jugadores"></label>
        <input asp-for="equipo.Jugadores" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Editar equipo</button>
</form>
<a asp-page="./Index" class="btn btn-secondary">Volver</a>
