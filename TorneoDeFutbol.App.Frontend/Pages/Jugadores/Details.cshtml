@page
@model TorneoDeFutbol.App.Frontend.Pages.Jugadores.DetailsModel
@{
}
<h1>Detalles del los jugador</h1>
<table class="table table-dark">
     <tr>
        <th scope="col">Nombre</th>
        <td>@Model.jugador.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Numero</th>
        <td>@Model.jugador.Numero</td>
    </tr>
    <tr>
        <th scope="col">Posicion</th>
        <td>@Model.jugador.Posicion</td>
    </tr> 
    <tr>
        <th scope="col">Equipo</th>
        @if (Model.jugador.Equipo == null)
        {
            <td><a class="btn btn-primary" asp-page="./AddEquipo" asp-route-id="@Model.jugador.Id">Asignar equipo</a></td>
        } 
        else
        {
            <td>@Model.jugador.Equipo.Nombre</td>
        }        
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>
