@page
@model TorneoDeFutbol.App.Frontend.Pages.MarcadoresFinales.DetailsModel
@{
}

<div class="card">
    <div class="card-header mb-4"> 
        <h1 class="mb-4 text-primary">Detalle marcador final</h1>
    </div>
    <div class="card-body">
        <table class="table ">
            <tr>
                <th>Equipo ganador</th>
                <td>@Model.marcadorFinal.EquipoGanador</td>
            </tr>
            <tr>
                <th>Marcador ganador</th>
                <td>@Model.marcadorFinal.MarcadorGanador</td>
            </tr>
            <tr>
                <th>Equipo perdedor</th>
                <td>@Model.marcadorFinal.EquipoPerdedor</td>
            </tr>      
            <tr>
                <th>Marcador perdedor</th>
                <td>@Model.marcadorFinal.MarcadorPerdedor</td>
            </tr> 
            <tr>
                <th>Partido</th>
                <td>@Model.marcadorFinal.Partido</td>
            </tr> 
        </table>
        
    </div>
    <div class="card-footer bg-transparent">
        <a class="btn btn-primary" asp-page="./Index">Volver</a>
    </div>
</div>
