@page
@model TorneoDeFutbol.App.Frontend.Pages.Novedades.EditModel
@{
}


<div class="card">
    <div class="card-header">
        <h1>Editar novedad</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="novedad.Id" />

            <div class="form-group mb-2">
                <label asp-for="novedad.YellowCards"></label>
                <input class="form-control" asp-for="novedad.YellowCards" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="novedad.RedCards"></label>
                <input class="form-control" asp-for="novedad.RedCards" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="novedad.goles"></label>
                <input class="form-control" asp-for="novedad.goles" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="novedad.NombreNovedad"></label>
                <input class="form-control" asp-for="novedad.NombreNovedad" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="novedad.Minuto"></label>
                <input class="form-control" asp-for="novedad.Minuto" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="novedad.Jugador"></label>
                <input class="form-control" asp-for="novedad.Jugador" />
                
            </div>
            <button type="submit" class="btn btn-primary">Editar novedad</button>
        </form>

    </div>

    <div class="card-footer">
        <a asp-page="./Index" class="btn btn-secondary">Volver</a>
    </div>
</div>