<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TorneoDeFutbol</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light navbarTorneo mb-4">
        <div class="container-fluid">
            <button class="navbar-toggler border border-white mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-white"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                <li class="nav-item">
                    <a class="nav-link text-white active" asp-area="" asp-page="/DirectoresTecnicos/Index">DirectoresTecnicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Equipos/Index">Equipos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Estadios/Index">Estadios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Desempeños/Index">Desempeños</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Novedades/Index">Novedades</a>
                </li>
            </ul>
            
            </div>
            <span class="flex text-white">Torneo de fútbol</span>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
